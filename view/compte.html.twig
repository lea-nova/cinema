<div class="container mt-5  d-flex justify-content-center">
	<div
		class="row col-8 d-flex justify-content-center">

		<!-- Partie gauche : Création de compte -->
		<div class="col-md-6  flex-column">
			<div class="border-right-custom p-10">
				<h2 class="mb-6">Créer un compte</h2>
				<div class="row col-10  justify-content-center">
					<form action="compte" method="post">
						<div class="mb-3">
							<label for="username" class="form-label">Nom d'utilisateur</label>
							<input type="text" class="form-control" name="username" id="username" placeholder="{{ username }}" value="{{ values.username}}">
							{{errors.username}}
						</div>
						<div class="mb-3">
							<label for="email" class="form-label">Email</label>
							<input type="email" class="form-control" name="email" id="email" placeholder="{{email}}" value="{{values.email}}">
							{{errors.email}}
						</div>
						<div class="mb-3">
							<label for="password" class="form-label">Mot de passe</label>
							<input type="password" class="form-control" name="password" id="password" placeholder="{{password}}" value="{{values.password}}">
							{{errors.password}}
						</div>
						<div class="mb-3">
							<label for="confirm_password" class="form-label">Confirmer le mot de passe</label>
							<input type="password" class="form-control" name="confirm_password" id="confirm_password" placeholder="Confirmer le mot de passe" value="{{values.confirm_password}}">
							{{errors.confirm_password}}
						</div>
						<button type="submit" class="btn btn-success" name="submit">Inscription</button>
						<br>
						{{errors.general}}
					</form>
				</div>
			</div>
		</div>
	</div>

	<div
		class="row col-8 d-flex justify-content-center">

		<!-- Partie droite : Identification -->
		<div class="col-md-6 flex-column ">
			<h2 class="mb-4">Identification</h2>
			<div class="row col-10  justify-content-center">
				<form action="compte" method="post">
					<div class="mb-3">
						<label for="login_email" class="form-label">Email</label>
						<input type="email" class="form-control" id="login_email" name="login_email" placeholder="{{login_email}}" value="{{values.login_email}}">
						{{errors.login_email}}
					</div>
					<div class="mb-3">
						<label for="login_password" class="form-label">Mot de passe</label>
						<input type="password" class="form-control" id="login_password" name="login_password" placeholder="{{login_password}}" value="{{values.login_password}}">
						{{errors.login_password}}
					</div>
					<button type="submit" class="btn btn-success" name="cmd_valid">Login</button>
				</form>
			</div>
		</div>
	</div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script></body></html></body></html>
